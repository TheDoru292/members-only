doctype html
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title=title
        link(rel="stylesheet" href="stylesheets/style.css")
    body 
        div.header
            h1 Members Only
            nav 
                if !currentUser
                    a(href="log-in") Log in
                else
                    a(href="create-post") Create post
                    if currentUser.admin !== true 
                        a(href="admin") Become an admin
                    if currentUser.status !== "Member"
                        a(href="join-the-club") Join the club
                    a(href="sign-out") Sign out
        div.content
            block content
        div.footer
            p Made by TheDoru
